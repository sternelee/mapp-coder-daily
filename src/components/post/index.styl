.post
  display flex
  flex-direction: column
  border-radius: 20px;
  width: 92%;
  margin: 20px auto 0;
  .topic
    display flex
    flex-direction: row
    align-items: center
    padding 10px 30px
    border-radius: 20px 20px 0 0;
    box-shadow:  inset 2px 2px 5px #b8b9be,inset -3px -3px 7px #fff;
    font-size: 24px;
    image
      width 50px
      height 50px
      border-radius 6px
    text
      margin-left: 20px
    .date
      margin-left: auto
  .content
    border-top 2px solid #ddd
    display flex
    flex-direction: column
    padding-bottom 10px
    image
      width: 100%
      min-height 240px
    .name
      margin-bottom 20px
      padding 30px
      box-shadow:  inset 2px 2px 5px #b8b9be,inset -3px -3px 7px #fff;
      .text
        margin-top: 10px;
        color: rgb(0, 31, 63);
    .tags
      display flex
      align-items: center
      flex-wrap: wrap
      padding 0 30px
      word-break: break-all;
      .tag
        margin: 10px
        color rgba(0,0,255, .7);
        font-size: 24px;
