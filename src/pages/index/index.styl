.inner
  overflow-x: hidden
  background: #d4e4ec;

.header
  text-align center
  color #fff
  display flex
  align-items center
  background: #d4e4ec;
  box-shadow:  20px 20px 60px #b4c2c9, -20px -20px 60px #f4ffff;
  .btn
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    margin-right: 30px;
    border-radius: 10px;
    background: #d4e4ec;
    box-shadow:  20px 20px 60px #b4c2c9, -20px -20px 60px #f4ffff;
    &.on
      background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
      box-shadow:  30px 30px 60px #b4c2c9, -30px -30px 60px #f4ffff;
  .caidan
    margin-left 30px
  .title
    width 60%
    display: flex;
    margin-left: auto;
    position relative;
    .options
      position: absolute;
      left: -12px;
      top: 70px;
      font-size: 24px;
      padding: 12px;
      z-index: 2;
      border-radius: 10px;
      background: #d4e4ec;
      box-shadow:  20px 20px 60px #b4c2c9, -20px -20px 60px #f4ffff;
      display: none;
      &.on
        display: block;
      .option
        padding: 10px;
        &.on
          background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
          box-shadow:  10px 10px 20px #b4c2c9, -10px -10px 20px #f4ffff;
  .search
    display flex
    align-items center
    margin-left 40px
    input
      width 80%
      border 2px solid #ddd
      border-radius 12px
      margin-left -50px
      font-size 26px
      padding-left 60px
      text-align: left

.inner
  width 1500px;
  background: #d4e4ec;
  display flex
  transition transform .2s linear


.topics
  width: 750px
  overflow-y: auto
  background #1c1e21
  .pubs
    width: 100%;
    height: 200px;
    display: flex;
    flex-wrap: wrap;
    white-space: nowrap;
  .topic
    width 180px
    display inline-block
    font-size 20px
    .box
      display: flex;
      flex-direction: column
      align-items: center
      justify-content: center
    image
      width 100px
      height 100px
    text
      margin-top 8px
      text-align center
      display inline-block
      height 60px
      color: #fff
  .alltags
    width 100%
    color #a9abb3
    background #1c1e21
    padding 30px 0 0 30px
    box-sizing border-box
    height auto
    overflow: hidden
    flex-wrap wrap
    &.hide
      height 0
      padding 0
    .my-tags
      margin-top: 20px;
      text
        color: #f58301;
    .my-empty
      margin-top: 30px;
      text-align: center;
    .tag-tips
      margin-top: 80px;
    .search-tag
      margin 20px auto
      padding 40px 20px
      width: 600px
      background: #fff
      border-radius 12px
      overflow hidden
      .search-input
        display flex
        width: 100%;
        align-items: center;
        justify-content: center;
      input
        width 70%
        height: 60px;
        line-height: 60px;
        border 2px solid #ddd
        border-radius 12px
        font-size 28px
        padding-left 10px
        text-align: left
        color: #000
        margin: 0 10px;
    text
      display inline-block
      color #a9abb3
      margin 20px


.posts
  display flex
  flex-direction: column
  width: 750px
  .the-topic
    display flex
    flex-direction: column
    align-items: center
    background #fff
    padding 20px 0
    image
      width 160px
      height 160px
      border-radius: 50%
    text
      margin 8px 20px
      text-align center
  .the-tag
    display:flex;
    justify-content: center;
    align-items: center;
    padding 20px 0
    font-size: 50px;
    text
      margin:0 20px;

