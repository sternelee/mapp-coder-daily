.inner
  overflow-x: hidden

.header
  text-align center
  color #fff
  display flex
  align-items center
  .caidan
    margin-left 30px
  .title
    width 54%
  .search
    display flex
    align-items center
    margin-left 40px
    input
      width 60%
      border 2px solid #ddd
      border-radius 12px
      margin-left -50px
      font-size 30px
      padding-left 60px
      text-align: left

.inner
  width 1500px;
  display flex
  transition transform .2s linear


.topics
  width: 750px
  overflow-y: auto
  .alltags
    width 100%
    background #1c1e21
    padding 30px
    box-sizing border-box
    height auto
    overflow: hidden
    display flex
    flex-wrap wrap
    &.hide
      height 0
      padding 0
    text
      display inline-block
      color #a9abb3
      margin 20px
  .topic
    width 250px
    display flex
    flex-direction: column
    align-items: center
    justify-content: center
    font-size 28px
    margin-top 30px
    float: left
    image
      width 120px
      height 120px
    text
      margin-top 8px
      text-align center
      display inline-block
      height 60px

.posts
  display flex
  flex-direction: column
  background #ddd
  width: 750px
