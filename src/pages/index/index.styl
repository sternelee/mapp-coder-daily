  .post
    display flex
    flex-direction: column
    margin-top 20px
    background #fff
    .topic
      display flex
      flex-direction: row
      align-items: center
      padding 10px 30px
      image
        width 50px
        height 50px
        border-radius 6px
      text
        margin-left: 20px
      .date
        margin-left: auto
        font-size 30px
    .content
      border-top 2px solid #ddd
      // padding-top: 20px
      display flex
      flex-direction: column
      padding-bottom 30px
      image
        margin: 0 auto
        width 100%
        min-height 240px
      .name
        margin-bottom 20px
        padding 30px
        border 1px solid #ddd
      .tags
        font-size 30px
        display flex
        align-items: center
        flex-wrap: wrap
        padding 0 30px
        text
          margin: 10px
          color rgba(0,0,255, .7);