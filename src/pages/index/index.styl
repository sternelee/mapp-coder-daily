.inner
  overflow-x: hidden

.header
  text-align center
  color #fff
  display flex
  align-items center
  .caidan
    margin-left 30px
  .title
    width 54%
  .search
    display flex
    align-items center
    margin-left 40px
    input
      width 60%
      border 2px solid #ddd
      border-radius 12px
      margin-left -50px
      font-size 30px
      padding-left 60px
      text-align: left

.inner
  width 1500px;
  display flex
  transition transform .2s linear


.topics
  width: 750px
  overflow-y: auto
  .topic
    width 250px
    display flex
    flex-direction: column
    align-items: center
    justify-content: center
    font-size 28px
    margin-top 30px
    float: left
    image
      width 120px
      height 120px
    text
      margin-top 8px
      text-align center
      display inline-block
      height 60px

.posts
  display flex
  flex-direction: column
  background #ddd
  width: 750px
  .the-topic
    display flex
    flex-direction: column
    align-items: center
    background #fff
    padding 20px 0
    image
      width 160px
      height 160px
      border-radius: 50%
    text
      margin-top 8px
      text-align center
  .post
    display flex
    flex-direction: column
    margin-top 20px
    background #fff
    .topic
      display flex
      flex-direction: row
      align-items: center
      padding 10px 30px
      image
        width 50px
        height 50px
        border-radius 6px
      text
        margin-left: 20px
      .date
        margin-left: auto
    .content
      border-top 2px solid #ddd
      padding-top: 20px
      display flex
      flex-direction: column
      padding-bottom 30px
      image
        margin: 0 auto
      .name
        margin-bottom 20px
        padding 0 30px
      .tags
        font-size 26px
        display flex
        align-items: center
        flex-wrap: wrap
        padding 0 30px
        text
          margin-right: 20px