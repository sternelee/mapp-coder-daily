.post
  width: 100%;
  overflow-x: hidden;
  background: #e6e7ee;
  height 100%;

.header
  text-align center
  display flex
  align-items top
  .btn
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    margin-right: 40px;
    border-radius: 10px;
    background: #e6e7ee;
    box-shadow:  6px 6px 12px #b8b9be,-6px -6px 12px #fff;
    &.on
      box-shadow: inset 2px 2px 5px #b8b9be,inset -3px -3px 7px #fff;

.title
  width: 92%;
  margin: 20px auto;
  padding 0 20px;
  box-sizing: border-box;
  border-radius: 20px;
  background: #e6e7ee;
  box-shadow:  20px 20px 60px #b4c2c9,
             -20px -20px 60px #f4ffff;
  .text
    margin-top: 10px;
    color: rgb(0, 31, 63);

.content
  padding 0 20px;
  box-sizing: border-box;
  border-radius: 20px;
  width: 92%;
  margin: 0 auto;
  background: #e6e7ee;
  box-shadow:  20px 20px 60px #b4c2c9,
             -20px -20px 60px #f4ffff;
