.post {
  width: 100%;
  overflow-x: hidden;
  background: #d4e4ec;
}
.header {
  text-align: center;
  display: flex;
  align-items: top;
}
.header .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}
.header .btn.on {
  background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
  box-shadow: 30rpx 30rpx 60rpx #b4c2c9, -30rpx -30rpx 60rpx #f4ffff;
}
.title {
  width: 92%;
  margin: 20rpx auto 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}
.title .text {
  margin-top: 10rpx;
  color: #001f3f;
}
.content {
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  width: 92%;
  margin: 0 auto;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}