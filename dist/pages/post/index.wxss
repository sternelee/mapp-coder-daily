.post {
  width: 100%;
  overflow-x: hidden;
}
.post .title text {
  border-bottom: 1rpx solid #ddd;
  color: #00f;
}
.header {
  text-align: center;
  display: flex;
  align-items: top;
}
.header .title {
  width: 64%;
  font-weight: 600;
  border-bottom: 1rpx solid #ddd;
  color: #00f;
}
.content {
  padding: 0 20rpx;
}