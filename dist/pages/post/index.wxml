<block wx:if="{{$taroCompReady}}">
    <view class="post">
        <view class="header" style="{{anonymousState__temp}}">
            <view bindtap="onHome">
                <icon-font compid="{{$compid__13}}"></icon-font>
            </view><text class="title" bindtap="onCopyUrl">{{title}}</text>
        </view>
        <view class="content">
            <block wx:if="{{img}}">
                <image src="{{img}}" mode="aspectFit"></image>
            </block>
            <wemark md="{{md}}" link="{{true}}" highlight="{{true}}" type="wemark"></wemark>
        </view>
    </view>
</block>