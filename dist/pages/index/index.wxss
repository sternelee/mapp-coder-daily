.inner {
  overflow-x: hidden;
  background: #d4e4ec;
}
.header {
  text-align: center;
  color: #fff;
  display: flex;
  align-items: center;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}
.header .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}
.header .btn.on {
  background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
  box-shadow: 30rpx 30rpx 60rpx #b4c2c9, -30rpx -30rpx 60rpx #f4ffff;
}
.header .caidan {
  margin-left: 30rpx;
}
.header .title {
  width: 60%;
  display: flex;
  margin-left: auto;
  position: relative;
}
.header .title .options {
  position: absolute;
  left: -12rpx;
  top: 70rpx;
  font-size: 24rpx;
  padding: 12rpx;
  z-index: 2;
  border-radius: 10rpx;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
  display: none;
}
.header .title .options.on {
  display: block;
}
.header .title .options .option {
  padding: 10rpx;
}
.header .title .options .option.on {
  background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
  box-shadow: 10rpx 10rpx 20rpx #b4c2c9, -10rpx -10rpx 20rpx #f4ffff;
}
.header .search {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}
.header .search input {
  width: 80%;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  margin-left: -50rpx;
  font-size: 26rpx;
  padding-left: 60rpx;
  text-align: left;
}
.inner {
  width: 1500rpx;
  background: #d4e4ec;
  display: flex;
  transition: -webkit-transform 0.2s linear;
  transition: transform 0.2s linear;
  transition: transform 0.2s linear, -webkit-transform 0.2s linear;
}
.topics {
  width: 750rpx;
  overflow-y: auto;
  background: #1c1e21;
}
.topics .pubs {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  white-space: nowrap;
}
.topics .topic {
  width: 180rpx;
  display: inline-block;
  font-size: 20rpx;
}
.topics .topic .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.topics .topic image {
  width: 100rpx;
  height: 100rpx;
}
.topics .topic text {
  margin-top: 8rpx;
  text-align: center;
  display: inline-block;
  height: 60rpx;
  color: #fff;
}
.topics .alltags {
  width: 100%;
  color: #a9abb3;
  background: #1c1e21;
  padding: 30rpx 0 0 30rpx;
  box-sizing: border-box;
  height: auto;
  overflow: hidden;
  flex-wrap: wrap;
}
.topics .alltags.hide {
  height: 0;
  padding: 0;
}
.topics .alltags .my-tags {
  margin-top: 20rpx;
}
.topics .alltags .my-tags text {
  color: #f58301;
}
.topics .alltags .my-empty {
  margin-top: 30rpx;
  text-align: center;
}
.topics .alltags .tag-tips {
  margin-top: 80rpx;
}
.topics .alltags .search-tag {
  margin: 20rpx auto;
  padding: 40rpx 20rpx;
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}
.topics .alltags .search-tag .search-input {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.topics .alltags .search-tag input {
  width: 70%;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
  text-align: left;
  color: #000;
  margin: 0 10rpx;
}
.topics .alltags text {
  display: inline-block;
  color: #a9abb3;
  margin: 20rpx;
}
.posts {
  display: flex;
  flex-direction: column;
  width: 750rpx;
}
.posts .the-topic {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 20rpx 0;
}
.posts .the-topic image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.posts .the-topic text {
  margin: 8rpx 20rpx;
  text-align: center;
}
.posts .the-tag {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 50rpx;
}
.posts .the-tag text {
  margin: 0 20rpx;
}