<block wx:if="{{$taroCompReady}}">
    <view class="index">
        <view class="header" style="{{anonymousState__temp}}">
            <view class="gengduo" bindtap="anonymousFunc0">
                <icon-font compid="{{$compid__8}}"></icon-font>
            </view>
            <view class="caidan" bindtap="anonymousFunc1">
                <icon-font compid="{{$compid__9}}"></icon-font>
            </view>
            <block wx:if="{{show}}">
                <view class="title"><text class="{{index === tabId ? 'on' : ''}}" bindtap="onTabs" wx:key="index" wx:for="{{tabs}}" wx:for-item="v" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{index}}">{{v}}</text>
                </view>
            </block>
        </view>
        <view class="inner" style="{{anonymousState__temp2}}">
            <scroll-view class="topics" scroll-y="{{true}}" style="{{anonymousState__temp3}}" enable-flex="{{true}}">
                <view style="{{anonymousState__temp4}}">常见频道</view>
                <scroll-view class="pubs" scroll-x="{{true}}" lower-threshold="{{20}}">
                    <view wx:key="id" class="topic" bindtap="onTopic" wx:for="{{Publications}}" wx:for-item="v" wx:for-index="_anonIdx2" data-e-tap-so="this" data-e-tap-a-a="{{v.id}}">
                        <view class="box">
                            <image src="{{v.image}}" mode="aspectFit"></image><text>{{v.name}}</text>
                        </view>
                    </view>
                </scroll-view>
                <view class="alltags">
                    <view>Ni~关注的标签#TAG</view>
                    <block>
                        <block wx:if="{{tags.length}}">
                            <view class="my-tags"><text wx:key="mtag" bindtap="onTag" wx:for="{{tags}}" wx:for-item="mtag" wx:for-index="_anonIdx4" data-e-tap-so="this" data-e-tap-a-a="{{mtag}}">#{{mtag}}</text>
                            </view>
                        </block>
                        <block wx:else>
                            <view class="my-empty">暂无关注，请搜索添加</view>
                        </block>
                    </block>
                    <view class="search-tag">
                        <view class="search-input">
                            <icon-font compid="{{$compid__10}}"></icon-font>
                            <input value="{{keyword}}" bindconfirm="onSearch" placeholder="搜索标签" />
                        </view>
                        <view class="hit-tags"><text wx:key="hit" bindtap="onLikeTag" wx:for="{{hits}}" wx:for-item="hit" wx:for-index="_anonIdx6" data-e-tap-so="this" data-e-tap-a-a="{{hit}}">#{{hit}}</text>
                        </view>
                    </view>
                    <view class="tag-tips">常见标签#TAG ( ↕ )</view>
                    <scroll-view scroll-y="{{true}}" style="{{anonymousState__temp5}}" enable-flex="{{true}}"><text wx:key="ptag" bindtap="onTag" wx:for="{{allTags}}" wx:for-item="ptag" wx:for-index="_anonIdx8" data-e-tap-so="this" data-e-tap-a-a="{{ptag}}">#{{ptag}}</text>
                    </scroll-view>
                </view>
            </scroll-view>
            <scroll-view scroll-y="{{true}}" lower-threshold="{{20}}" class="posts" style="{{anonymousState__temp6}}" bindscrolltolower="onNext" enable-flex="{{true}}">
                <block wx:if="{{pub}}">
                    <view class="the-topic" bindtap="onLikePub" data-e-tap-so="this" data-e-tap-a-a="{{pub}}">
                        <image src="{{thePub.image}}" mode="aspectFit"></image>
                        <view style="{{anonymousState__temp7}}"><text style="{{anonymousState__temp8}}">{{title}}</text>
                            <icon-font compid="{{$compid__11}}"></icon-font>
                        </view>
                    </view>
                </block>
                <block wx:if="{{tag}}">
                    <view class="the-tag" bindtap="onLikeTag" data-e-tap-so="this" data-e-tap-a-a="{{tag}}"><text style="{{anonymousState__temp9}}">{{title}}</text>
                        <icon-font compid="{{$compid__12}}"></icon-font>
                    </view>
                </block>
                <post wx:key="$original" wx:for="{{loopArray12}}" wx:for-item="id" wx:for-index="_anonIdx10" compid="{{id.$compid__7}}"></post>
            </scroll-view>
        </view>
    </view>
</block>