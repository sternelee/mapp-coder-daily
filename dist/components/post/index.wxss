.post {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  width: 92%;
  margin: 20rpx auto 0;
  background: #d4e4ec;
  box-shadow: 20rpx 20rpx 60rpx #b4c2c9, -20rpx -20rpx 60rpx #f4ffff;
}
.post .topic {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
  box-shadow: 30rpx 30rpx 60rpx #b4c2c9, -30rpx -30rpx 60rpx #f4ffff;
  font-size: 24rpx;
}
.post .topic image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 6rpx;
}
.post .topic text {
  margin-left: 20rpx;
}
.post .topic .date {
  margin-left: auto;
}
.post .content {
  border-top: 2rpx solid #ddd;
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}
.post .content image {
  margin: 0 auto;
  width: 100%;
  min-height: 240rpx;
}
.post .content .name {
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: linear-gradient(145deg, #bfcdd4, #e3f4fd);
  box-shadow: 30rpx 30rpx 60rpx #b4c2c9, -30rpx -30rpx 60rpx #f4ffff;
}
.post .content .name .text {
  margin-top: 10rpx;
  color: #001f3f;
}
.post .content .tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 30rpx;
  word-break: break-all;
}
.post .content .tags .tag {
  margin: 10rpx;
  color: rgba(0,0,255,0.7);
  font-size: 24rpx;
}