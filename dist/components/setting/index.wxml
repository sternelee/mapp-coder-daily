<block wx:if="{{$taroCompReady}}">
    <view class="{{show ? 'toast on' : 'toast'}}">
        <pay compid="{{$compid__39}}"></pay>
        <view class="setting">
            <view class="title">
                <icon-font compid="{{$compid__40}}"></icon-font><text>设置中心</text>
            </view>
            <view class="label"><text>默认显示: </text>
                <view class="sort">
                    <view class="{{'btn ' + (tabId === 0 ? 'on' : '')}}" bindtap="anonymousFunc1"><text>关注</text>
                    </view>
                    <view class="{{'btn ' + (tabId === 1 ? 'on' : '')}}" bindtap="anonymousFunc2"><text>全部</text>
                    </view>
                </view>
            </view>
            <view class="label"><text>内容排序: </text>
                <view class="sort">
                    <view class="{{'btn ' + (order === 'popularity' ? 'on' : '')}}" bindtap="anonymousFunc3"><text>最热</text>
                    </view>
                    <view class="{{'btn ' + (order === 'creation' ? 'on' : '')}}" bindtap="anonymousFunc4"><text>最新</text>
                    </view>
                </view>
            </view>
            <view class="label"><text>标题语言:</text>
                <view class="{{'btn ' + (language[1] === 0 ? 'on' : '')}}" bindtap="anonymousFunc5">
                    <icon-font compid="{{$compid__41}}"></icon-font>
                </view>
                <view class="{{'btn ' + (language[1] === 1 ? 'on' : '')}}" bindtap="anonymousFunc6">
                    <icon-font compid="{{$compid__42}}"></icon-font>
                </view>
                <view class="{{'btn ' + (language[1] === 2 ? 'on' : '')}}" bindtap="anonymousFunc7">
                    <icon-font compid="{{$compid__43}}"></icon-font>
                </view>
            </view>
            <view class="label"><text>文章语言:</text>
                <view class="{{'btn ' + (language[2] === 0 ? 'on' : '')}}" bindtap="anonymousFunc8">
                    <icon-font compid="{{$compid__44}}"></icon-font>
                </view>
                <view class="{{'btn ' + (language[2] === 1 ? 'on' : '')}}" bindtap="anonymousFunc9">
                    <icon-font compid="{{$compid__45}}"></icon-font>
                </view>
                <view class="{{'btn ' + (language[2] === 2 ? 'on' : '')}}" bindtap="anonymousFunc10">
                    <icon-font compid="{{$compid__46}}"></icon-font>
                </view>
            </view>
            <view class="label info">
                <button open-type="contact">
                    <view class="btn">
                        <icon-font compid="{{$compid__47}}"></icon-font>客服</view>
                </button>
                <button bindtap="anonymousFunc11">
                    <view class="btn">
                        <icon-font compid="{{$compid__48}}"></icon-font>捐赠</view>
                </button>
            </view>
            <view class="title btn" bindtap="anonymousFunc12">
                <icon-font compid="{{$compid__49}}"></icon-font><text>确定</text>
            </view>
        </view>
    </view>
</block>